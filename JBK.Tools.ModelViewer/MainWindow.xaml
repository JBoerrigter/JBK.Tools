            </ModelVisual3D>
            -->
            
        </Viewport3D>

        <!-- Rotation Slider -->
        <Slider Name="rotationSlider" VerticalAlignment="Bottom" Minimum="0" Maximum="360" 
                ValueChanged="RotationSlider_ValueChanged"/>
    </Grid>
</Window>
